<h1>WLCM T0 ULTRAGRAM</h1>
<% @post.each do |post| %>
    <div class="posts-wrapper row">
        <div class="post">
          <div class="post-head">
            <div class="name">
              HATEMACHINE
            </div>
          </div>
          <div class="image center-block">
            <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
          </div>
          <p class="caption">
            <%= post.caption %>
          </p>
        </div>
    </div>
<% end %>
